    <script>
        function validateForm() {
            let valid = true;

            // Efface les messages d'erreur
            document.getElementById('nameError').textContent = '';
            document.getElementById('emailError').textContent = '';
            document.getElementById('dobError').textContent = '';
            document.getElementById('diplomaError').textContent = '';
            document.getElementById('successMessage').textContent = '';

            // Récupération des valeurs
            let name = document.getElementById('name').value.trim();
            let email = document.getElementById('email').value.trim();
            let dob = document.getElementById('dob').value.trim();
            let diploma = document.getElementById('diploma').value.trim();

            // Validation du nom
            if (name === '') {
                document.getElementById('nameError').textContent = 'Le nom complet est obligatoire.';
                valid = false;
            }

            // Validation de l'email
            let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (email === '') {
                document.getElementById('emailError').textContent = 'L\'adresse email est obligatoire.';
                valid = false;
            } else if (!emailRegex.test(email)) {
                document.getElementById('emailError').textContent = 'L\'adresse email n\'est pas valide.';
                valid = false;
            }

            // Validation de la date de naissance
            if (dob === '') {
                document.getElementById('dobError').textContent = 'La date de naissance est obligatoire.';
                valid = false;
            }

            // Validation de l'année du baccalauréat
            if (diploma === '') {
                document.getElementById('diplomaError').textContent = 'L\'année du baccalauréat est obligatoire.';
                valid = false;
            }

            // Si tout est valide, afficher un message de succès
            if (valid) {
                document.getElementById('successMessage').textContent = 'Inscription réussie ! Bonne chance pour le concours IFRI.';
            }

            return valid;
        }
    </script>

